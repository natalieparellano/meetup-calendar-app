<!doctype html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' type='text/css'>
  </head>

  <body>

    <h1>Events</h1>
    <ul>
      <% @events.each do |event| %>
        <p>Date: <%= event.date %></p>
        <a href="<%= event.url %>"/>
        <p>Event: <%= event.name %></p></a>
        <p>Group: <%= event.group.name %></p>
        <p>Popularity: <%= event.group.count %></p>
        <br />
      <% end %>
    </ul>
  </body>
</html>


