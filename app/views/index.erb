<!doctype html>
<html>
  <head>
    <link rel='bootstrap.min.css' type='text/css'>
  </head>

  <body>

    <h1>Events</h1>
    <ul>
      <% @events.each do |event| %>
        <p>Date: <%= event.date %></p>
        <p style="color: rgb(<%=event.group.color%>)"><a href="<%= event.url %>"/>
        <%= event.name %></a> - <%= event.group.name %></p>
        <p>Popularity: <%= event.group.count %></p>
        <br />
      <% end %>
    </ul>
  </body>
</html>

