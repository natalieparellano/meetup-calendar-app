<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  </head>

  <body>
    <div class="container-fluid">
    <h1>Meetup Events This Week</h1>
    <ul>
      <% @events.each do |event| %>
        <p>Date: <%= event.date %></p>
        <p><a href="<%= event.url %>" style="color: rgb(<%= event.group.color %>); font-size: <%= event.group.font_size %>px; line-height:0.9; target="_blank/>
        <%= event.name %> - <%= event.group.name %></p></a>
      <% end %>
    </ul>

    <form action="/events" method="POST">
    <button type="submit">Sample more?</button>
    </form>

    </div>
  </body>
</html>

